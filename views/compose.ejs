<%- include partials/header %>

<h1>Compose</h1>

   <!-- post requests must come from inside a form -->
<form action="/compose" method="post">
    <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" id="title" type="text" name="postTitle" placeholder="Title">
    </div>
    <div class="form-group">
        <label for="content">Content</label>
        <textarea class="form-control" rows="6" id="title"type="text" name="postContent" placeholder="Enter Content Here"></textarea>
    </div>

    <button class="btn btn-primary" type="submit" name="submit">Publish</button>
</form>


<%- include partials/footer %>